<link href="~/assert/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/assert/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/assert/css/jquery.paginate.css" rel="stylesheet" />
<link href="~/assert/css/jquery.yhhDataTable.css" rel="stylesheet" />
<script src="~/assert/js/jquery.min.js"></script>
<script src="~/assert/js/jquery.paginate.js"></script>
<script src="~/assert/js/jquery.yhhDataTable.js"></script>
<script src="~/assert/js/bootstrap.min.js"></script>
<div>
    <div style="width:980px;margin:20px auto;" class="form-group form-horizontal ">
        <label for="userid" class="col-sm-1 control-label">  ID:</label>
        <div class="col-sm-3">
            <input type="text" id="goodsid" name="goodsid" class="form-control " placeholder="请输入ID" />
        </div>
        <input type="button" value="查询" id="search" class="btn btn-default" />
        <input type="button" value="新增" id="add" class="btn btn-default" data-toggle='modal' data-target='#myModal' />
    </div>

    <div style="width:980px;margin:20px auto;">
        <table id="testtable5" class="yhh-data-table end-view-btn">
            <thead>
                <tr>
                    <th>商品ID</th>
                    <th>价格</th>
                    <th>标题</th>
                    <th>副标题</th>
                    <th>图片</th>
                    <th>值</th>
                    <th>货源</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <!-- 模态框（Modal） -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        ×
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        商品详情
                    </h4>
                </div>
                <div class="modal-body" style="height: 500px;">
                    <div class="col-sm-12 form-group">
                        <label class="col-sm-3 control-label">  商品ID:</label>
                        <div class="col-sm-6">
                            @*<input type="text" id="goodsid" name="goodsid" class="form-control " placeholder="请输入商品ID" />*@
                        </div>
                    </div>
                    <div class="col-sm-12 form-group">
                        <label for="price" class="col-sm-3 control-label">  价格:</label>
                        <div class="col-sm-6">
                            <input type="text" id="price" name="goodsid" class="form-control " placeholder="请输入价格" />
                        </div>
                    </div>
                    <div class="col-sm-12 form-group">
                        <label for="title" class="col-sm-3 control-label">  标题:</label>
                        <div class="col-sm-6">
                            <input type="text" id="title" name="goodsid" class="form-control " placeholder="请输入标题" />
                        </div>
                    </div>
                    <div class="col-sm-12 form-group">
                        <label for="subtitle" class="col-sm-3 control-label">  副标题:</label>
                        <div class="col-sm-6">
                            <input type="text" id="subtitle" name="goodsid" class="form-control " placeholder="请输入副标题" />
                        </div>
                    </div>
                    <div class="col-sm-12 form-group">
                        <label for="pictures" class="col-sm-3 control-label">  商品图片:</label>
                        <div class="col-sm-8">
                            <input type="file" id="inputfile" class="btn btn-default col-sm-8">
                            <button type="submit" class="btn btn-default col-sm-2" id="btnUpload">上传</button>

                        </div>
                    </div>
                    <div class="col-sm-12 form-group" style="height:150px;">
                        <div class="col-sm-3"></div>
                        <div class="col-sm-8" id="pictures">

                        </div>
                    </div>
                    <div class="col-sm-12 form-group">
                        <label for="sort" class="col-sm-3 control-label">  值:</label>
                        <div class="col-sm-6">
                            <input type="text" id="sort" name="goodsid" class="form-control " placeholder="请输入值" />
                        </div>
                    </div>
                    <div class="col-sm-12 form-group">
                        <label for="source" class="col-sm-3 control-label">  来源:</label>
                        <div class="col-sm-6">
                            <input type="text" id="source" name="goodsid" class="form-control " placeholder="请输入来源" />
                        </div>
                    </div>

                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        关闭
                    </button>
                    <button type="button" class="btn btn-primary" id="submit">
                        提交更改
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/assert/js/Goods/goods.js"></script>
<script>
    goods.init();

</script>